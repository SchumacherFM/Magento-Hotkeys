<config>
    <sections>
        <system>
            <show_in_store>1</show_in_store>
            <groups>
                <hotkeys translate="label">
                    <label>Hotkeys [@SchumacherFM Extension]</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>601</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label" module="hotkeys">
                            <label>Enable Hotkeys</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>

                        <key_main_menu translate="label" module="hotkeys">
                            <label>Key combination to activate the four cursors for the top menu</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                Please focus the text field with your cursor and press the combination which you would
                                like to use. Minimum two keys.
                                ("meta", "alt", "option", "ctrl", "shift", "cmd") + Alphanumeric key. The word meta
                                can be used on Win and OSX to map to the WIN or âŒ˜ key. Default is "meta m".
                                ]]></comment>
                            <depends>
                                <enable>1</enable>
                            </depends>
                        </key_main_menu>

                    </fields>
                </hotkeys>
            </groups>
        </system>
    </sections>
</config>
